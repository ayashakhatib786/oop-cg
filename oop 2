import java.util.Scanner;

public class HotelBookingSystem {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Create a 2D array for rooms (5 floors, 5 rooms per floor)
        boolean[][] rooms = new boolean[5][5]; // false = available, true = booked

        int choice;
        do {
            System.out.println("\n===== HOTEL ROOM BOOKING SYSTEM =====");
            System.out.println("1. View Room Status");
            System.out.println("2. Book a Room");
            System.out.println("3. Exit");
            System.out.print("Enter your choice: ");
            choice = sc.nextInt();

            switch (choice) {
                case 1:
                    viewRooms(rooms);
                    break;

                case 2:
                    bookRoom(rooms, sc);
                    break;

                case 3:
                    System.out.println("Thank you for using the Hotel Booking System. Goodbye!");
                    break;

                default:
                    System.out.println("Invalid choice! Please enter 1, 2, or 3.");
            }

        } while (choice != 3);

        sc.close();
    }

    // Method to display all rooms
    public static void viewRooms(boolean[][] rooms) {
        System.out.println("\nRoom Status (A = Available, B = Booked):");

        for (int floor = 0; floor < rooms.length; floor++) {
            System.out.print("Floor " + (floor + 1) + ": ");
            for (int room = 0; room < rooms[floor].length; room++) {
                if (rooms[floor][room]) {
                    System.out.print("[B] ");
                } else {
                    System.out.print("[A] ");
                }
            }
            System.out.println();
        }
    }

    // Method to book a specific room
    public static void bookRoom(boolean[][] rooms, Scanner sc) {
        System.out.print("\nEnter floor number (1 - " + rooms.length + "): ");
        int floor = sc.nextInt();

        System.out.print("Enter room number (1 - " + rooms[0].length + "): ");
        int room = sc.nextInt();

        // Validate floor and room input
        if (floor < 1 || floor > rooms.length || room < 1 || room > rooms[0].length) {
            System.out.println("❌ Invalid floor or room number. Please try again.");
            return;
        }

        // Check availability
        if (rooms[floor - 1][room - 1]) {
            System.out.println("⚠️ Room is already booked. Please choose another room.");
        } else {
            rooms[floor - 1][room - 1] = true;
            System.out.println("✅ Room " + room + " on Floor " + floor + " has been booked successfully!");
        }
    }
}
