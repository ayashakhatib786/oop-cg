import java.util.InputMismatchException;
import java.util.Scanner;

public class RobustCalculator {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        boolean continueCalculation = true;

        System.out.println("===== WELCOME TO JAVA CALCULATOR =====");

        while (continueCalculation) {
            try {
                // Get user input
                System.out.print("\nEnter first number: ");
                double num1 = sc.nextDouble();

                System.out.print("Enter second number: ");
                double num2 = sc.nextDouble();

                System.out.println("\nSelect an operation:");
                System.out.println("1. Addition (+)");
                System.out.println("2. Subtraction (-)");
                System.out.println("3. Multiplication (*)");
                System.out.println("4. Division (/)");
                System.out.println("5. Modulus (%)");

                System.out.print("Enter your choice (1-5): ");
                int choice = sc.nextInt();

                double result = 0;
                boolean validOperation = true;

                // Use conditional logic to process choice
                switch (choice) {
                    case 1:
                        result = num1 + num2;
                        break;
                    case 2:
                        result = num1 - num2;
                        break;
                    case 3:
                        result = num1 * num2;
                        break;
                    case 4:
                        if (num2 == 0) {
                            System.out.println("‚ùå Error: Division by zero is not allowed!");
                            validOperation = false;
                        } else {
                            result = num1 / num2;
                        }
                        break;
                    case 5:
                        result = num1 % num2;
                        break;
                    default:
                        System.out.println("‚ùå Invalid choice! Please select a valid option.");
                        validOperation = false;
                }

                if (validOperation)
                    System.out.println("‚úÖ Result: " + result);

            } catch (InputMismatchException e) {
                System.out.println("‚ö†Ô∏è Invalid input! Please enter numeric values only.");
                sc.nextLine(); // clear invalid input
            }

            // Ask user if they want to continue
            System.out.print("\nDo you want to perform another calculation? (yes/no): ");
            String again = sc.next().toLowerCase();

            if (!again.equals("yes")) {
                continueCalculation = false;
                System.out.println("\nThank you for using the Java Calculator! üëã");
            }
        }

        sc.close();
    }
}
